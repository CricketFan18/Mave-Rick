<div class="p-5 mb-4 bg-body-tertiary rounded-3">
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">Good Morning</h1>
      <p class="col-md-8 fs-4">What would you like to control?</p>
      <form action="/devices" method="post">
        <div class="box">
            <label for="fan">Fan</label>
            <input type="number" id="fan" min="0" max="5" name="value">
            <button class="btn btn-success rounded-pill px-3" type="submit" name="device" value="fan">Go</button>
        </div>

        <div class="box">
            <label for="ac">Air Condition</label>
            <input type="number" id="ac" min="0" max="5" name="value">
            <button class="btn btn-success rounded-pill px-3" type="submit" name="device" value="fan">Go</button>
        </div>

        <div class="box">
            <label for="fan">Bulb</label>
            <input type="number" id="bulb" min="0" max="1" name="value">
            <button class="btn btn-success rounded-pill px-3" type="submit" name="device" value="fan">Go</button>
        </div>

        <div class="box">
            <label for="led">Select your favorite color:</label>
            <input type="color" id="led" name="favcolor" value="#ff0000"><br><br>
            <input type="submit">
        </div>

      </form>
    </div>
  </div>